    <section>
      <div class="pemain">
        <h2>PLAYER 1</h2>
        <img src="../assets/img/batu.png" class="batu" />
        <img src="../assets/img/kertas.png" class="kertas" />
        <img src="../assets/img/gunting.png" class="gunting" />
