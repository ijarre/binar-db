      <div class="mid">
        <h3 class="vs">VS</h3>
        <div class="hasil">
          <h3 id="changeable">PLAYER 1 WIN</h3>
        </div>
        <img class="refresh" src="../assets/img/refresh.png" />
      </div>
      <div class="komputer">
        <h2>COM</h2>
        <img src="../assets/img/batu.png" class="batu-lawan" id="rock" />
        <img src="../assets/img/kertas.png" class="kertas-lawan" />
        <img src="../assets/img/gunting.png" class="gunting-lawan" />
      </div>
    </section>

    <script type="module" src="./page-component-suwit/script.js"></script>
